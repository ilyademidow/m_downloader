<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app2="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
    <RelativeLayout
            android:id="@+id/song_const_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusableInTouchMode="true"
            tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="8dp">

        <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="Author"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:layout_marginTop="7dp"
                android:layout_alignParentStart="true"/>
        <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:text="Music 1"
                android:textSize="16dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_below="@+id/author"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="7dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar" android:visibility="invisible"
                android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
        <ImageButton
                android:id="@+id/download_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:layout_editor_absoluteY="166dp"
                tools:layout_editor_absoluteX="328dp"
                android:background="@drawable/arrow_down_dark"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
